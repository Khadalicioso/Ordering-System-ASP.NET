@model IPT_OrderingSystem.Models.Product

<style>
    .save-button {
        margin-top: 20px;
    }

    .back-link {
        margin-top: 20px;
    }
</style>

<h2 style="margin-top: 150px;">Edit Product</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary save-button">Save Changes</button>
    @Html.ActionLink("Back to List", "Index", "Products", null, new { @class = "btn btn-secondary back-link" })
</form>
